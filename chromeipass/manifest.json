{
  "name": "ChromeIPass",
  "version": "1.0.8",
  "manifest_version": 2,
  "description": "Chrome and KeePass integration using KeePassHttp",
  "icons": {
    "16": "keepass.png",
    "48": "keepass-big.png"
  },
  "page_action": {
    "default_icon": "keepass.png",
    "popup": "popup.html"
  },
  "background": {"scripts": ["aes.js","cryptoHelpers.js","utf8.js","background.js", "chromeipass.js"]},
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["chromeipass.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "permissions": [
    "contextMenus", "tabs", "http://localhost/"
  ]
}
